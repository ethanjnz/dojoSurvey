<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <title>Document</title>
</head>

<body>

    <div class="card w-25 mx-auto mt-5 shadow">
        <div class="card-body">
            <div class="card-title fs-5 text-decoration-underline">Submitted Info</div>
            <div class="row">
                <p class="col">Name:</p>
                <p class="col">@ViewBag.name</p>
            </div>
            <div class="row">
                <p class="col">Location:</p>
                <p class="col">@ViewBag.location</p>
            </div>
            <div class="row">
                <p class="col">Language:</p>
                <p class="col">@ViewBag.language</p>
            </div>
            <div class="row">
                <p class="col">Comment:</p>
                @{
                    if (ViewBag.Comment == null)
                    {
                        <p class="col">No Comment</p>
                    }
                    else
                    {
                        <p class="col">@ViewBag.Comment</p>
                    }
                }
            </div>
            <div class="d-flex justify-content-end">
                <a class="btn btn-primary" href="/">Home</a>
            </div>

        </div>
    </div>


</body>

</html>